extends ../layout/index

block contenido 
    div 
        h2.text-center.font-extrabold.text-6xl Recupera tu contraseña
        
        .mt-8.mx-auto.max-w-md
          .bg-white.py-8.px-4.shadow
           form.space-y-5.px-6(action="")
            div
               label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Contraseña:
               input#password.w-full.px-3.py-2.border.border-gray-300.rounded-xl.placeholder-gray-400(type="password"  placeholder="Mínimo de 8 carácteres" name="password_usuario")
            
            .flex.items-center.justify-between 
                a.text-gray-500.text-xs(href="/auth/login") ¿Aún no tienes cuenta? 
                    span.underline Registrate
                a.text-gray-500.text-xs(href='/auth/Register') ¿Ya tienes cuenta? 
                    span.underline Ingresa a tu Cuenta
            div
                input(class="w-full bg-customLightGreen hover:bg-green-600 text-white font-bold py-3 cursor-pointer" type="submit" value="Recuperar Password")
